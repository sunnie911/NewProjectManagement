
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_SysLayout.cshtml";
    List<SelectListItem> parentList = ViewBag.CategoryList;
}
<div class="layui-row">

    <div class="layui-inline" id="demoTable">
        <label class="layui-form-label">新闻分类</label>
        <div class="layui-input-inline">
            <select name="catagoryId" id="catagoryId" data-type="reload" >
                <option>--选择分类--</option>
                @if (parentList != null && parentList.Any())
                {
                    foreach (var item in parentList)
                    {
                        <option value="@item.Value">@item.Text </option>
                    }
                }

            </select>
             

        </div>
    </div>
    <a href="@(Url.Action("Create"))">
        <button class="layui-btn addCate"><i class="layui-icon"></i>增加</button>
    </a>
</div>
<div>
   <table id="demo" lay-filter="test"></table>
</div>

@section Scripts{
<script>
layui.use('table', function(){
  var table = layui.table;
  
  //第一个实例
  table.render({
    elem: '#demo'
    ,height: 312
    ,url: '/SysArticle/GetEntitiesByPaged' //数据接口
      , page: true //开启分页
      , id: 'testReload'
    ,cols: [[ //表头
      {field: 'index', title: 'ID', width:80, fixed: 'left',type:'numbers'},
      {field: 'title', title: '标题'},
      { field: 'cateName', title: '分类', width: 100 }, 
      {field: 'author', title: '作者', width:100},
      {field: 'createdDate', title: '添加时间', width:100},
      {field: 'id', title: '操作', width:100,templet: '<div><a href="/SysArticle/Edit?id={{d.id}}" class="layui-table-link">编辑</a></div>'},
    ]]
  });
    var $ = layui.$, active = {
        reload: function () {
            var type = $('#catagoryId');

            //执行重载
            table.reload('testReload', {
                page: {
                    curr: 1 //重新从第 1 页开始
                }
                , where: { 
                        categoryId: type.val() 
                }
            });
        }
    };

    $('#demo #catagoryId').on('change', function () {
        var type = $(this).data('type');
        active[type] ? active[type].call(this) : '';
    });
});
</script>
}