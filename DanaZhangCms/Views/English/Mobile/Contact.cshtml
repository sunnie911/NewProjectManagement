@using DanaZhangCms.Core.Helpers;
@model List<DanaZhangCms.Models.Contents>
@{
    //ViewData["Title"] = Model.Title;
    Layout = "~/Views/Shared/_LayoutMobileEn.cshtml";

    var address = string.Empty;
    var phone = string.Empty;
    var itTel = string.Empty;
    var result = Model.FirstOrDefault(p => p.SpellName.Contains("ConactAddressEn"));
    if (result != null)
    {
        address = CommonHelper.NoHTML(result.Content);
    }


    var result1 = Model.FirstOrDefault(p => p.SpellName.Contains("ConactPhone"));
    if (result1 != null)
    {
        phone = CommonHelper.NoHTML(result1.Content);
    }

    var result2 = Model.FirstOrDefault(p => p.SpellName.Contains("ConactITTEL"));
    if (result2 != null)
    {
        itTel = CommonHelper.NoHTML(result2.Content);
    }

    var list = Model.Where(p => p.SpellName.Contains("SeekAreaEn")).ToList();
}

