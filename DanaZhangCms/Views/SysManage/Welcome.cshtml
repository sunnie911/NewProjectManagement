@using DanaZhangCms.ViewModels;
 
    @{
        Layout = "_SysLayout";
        SiteView Model = ViewBag.SiteView;
    }


    <fieldset class="layui-elem-field">
        <legend>数据统计</legend>
        <div class="layui-field-box">
            <div class="layui-col-md12">
                <div class="layui-card">
                    <div class="layui-card-body">
                        <div class="layui-carousel x-admin-carousel x-admin-backlog" lay-anim="" lay-indicator="inside" lay-arrow="none" style="width: 100%; height: 90px;">
                            <div carousel-item="">
                                <ul class="layui-row layui-col-space10 layui-this">
                                    <li class="layui-col-xs2">
                                        <a href="javascript:;" class="x-admin-backlog-body">
                                            <h3>学术交流总数</h3>
                                            <p>
                                                <cite>@Model.Articles</cite>
                                            </p>
                                        </a>
                                    </li>
                                    <li class="layui-col-xs2">
                                        <a href="javascript:;" class="x-admin-backlog-body">
                                            <h3>视频数</h3>
                                            <p>
                                                <cite>@Model.Vedios</cite>
                                            </p>
                                        </a>
                                    </li>
                                    <li class="layui-col-xs2">
                                        <a href="javascript:;" class="x-admin-backlog-body">
                                            <h3>产品数</h3>
                                            <p>
                                                <cite>@Model.Products</cite>
                                            </p>
                                        </a>
                                    </li>
                                    <li class="layui-col-xs2">
                                        <a href="javascript:;" class="x-admin-backlog-body">
                                            <h3>合作单位</h3>
                                            <p>
                                                <cite>@Model.Logos</cite>
                                            </p>
                                        </a>
                                    </li>
                                    @*<li class="layui-col-xs2">
                                        <a href="javascript:;" class="x-admin-backlog-body">
                                            <h3>文章数</h3>
                                            <p>
                                                <cite>67</cite>
                                            </p>
                                        </a>
                                    </li>
                                    <li class="layui-col-xs2">
                                        <a href="javascript:;" class="x-admin-backlog-body">
                                            <h3>文章数</h3>
                                            <p>
                                                <cite>6766</cite>
                                            </p>
                                        </a>
                                    </li>*@
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </fieldset>

    <fieldset class="layui-elem-field">
        <legend>系统信息</legend>
        <div class="layui-field-box">
            <table class="layui-table">
                <tbody>
                    <tr>
                        <th>CompanyCms版本</th>
                        <td>1.1.0</td>
                    </tr>
                    <tr>
                        <th>服务器信息</th>
                        <td>@(System.Runtime.InteropServices.RuntimeInformation.OSDescription)</td>
                    </tr>
                    <tr>
                        <th>操作系统</th>
                        <td>@System.Environment.OSVersion</td>
                    </tr>
                    <tr>
                        <th>当前目录</th>
                        <td>@System.Environment.CurrentDirectory</td>
                    </tr>
                    <tr>
                        <th>处理器个数</th>
                        <td>@System.Environment.ProcessorCount</td>
                    </tr>
                    <tr>
                        <th>系统运行时间</th>
                        <td>@(System.Environment.TickCount/ 1000 / 60) Min</td>
                    </tr>
                    <tr>
                        <th>NetCore版本</th>
                        <td>@(Microsoft.Extensions.DependencyModel.DependencyContext.Default.Target.Framework.Replace(".NETCoreApp,Version=", ""))</td>
                    </tr>
                    <tr>
                        <th>运行内存</th>
                        <td>@(System.Environment.WorkingSet/1024/1024) M</td>
                    </tr>

                </tbody>
            </table>
        </div>
    </fieldset>
    <fieldset class="layui-elem-field">
        <legend>开发团队</legend>
        <div class="layui-field-box">
            <table class="layui-table">
                <tbody>
                    <tr>
                        <th>版权所有</th>
                        @*<td>

                                <a href="https://github.com/ayzhanglei/danazhangcms" class='x-a' target="_blank">访问官网</a>
                            </td>*@
                    </tr>
                    <tr>
                        <th>开发者</th>
                        <td>Sunnie(lufeiya119@qq.com)</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </fieldset>

