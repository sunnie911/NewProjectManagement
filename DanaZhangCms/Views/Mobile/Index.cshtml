@model DanaZhangCms.ViewModels.HomeVM
@{
    Layout = "~/Views/Shared/_LayoutMobile.cshtml";
}
@section css{
    <link rel="stylesheet" type="text/css" href="/css/mobile/index.css">
    <link rel="stylesheet" type="text/css" href="/css/mobile/swiper.min.css" />
}
<div class="index_whole">
    <div class="index_main">
        <!-- banner -->
        <div class="banner">
            <div class="swiper-container">
                <div class="swiper-wrapper">
                    @if (Model.Banners != null && Model.Banners.Any())
                    {
                        foreach (var item in Model.Banners)
                        {
                            <div class="swiper-slide">
                                <div class="slide-left">
                                    <div class="bt">@item.Name </div>
                                    <span>@item.Summary</span>
                                    <a class="readMore"   href="@item.LinkUrl">阅读更多</a>
                                </div>
                                <div class="slide-right">
                                    <img src="@item.ImgUrl">
                                </div>
                            </div>
                        }

                    }
                </div>
                <!-- Add Pagination -->
                <div class="swiper-pagination"></div>
                <!-- Add Arrows -->
                <div class="swiper-button-next"></div>
                <div class="swiper-button-prev"></div>
            </div>
        </div>
        <!-- 热卖详情 -->
        <div class="hotSell">
            <div class="index_title">
                <div class="title">热卖产品</div>
                <div class="main">
                    <span>HOT PRODUCT</span>
                    <div class="more">
                        <a href="/mobile/product" target="_blank">
                            <span>更多</span>
                            <img src="/images/to1.png">
                        </a>
                    </div>

                </div>
            </div>
            <div class="hotSell_main">
                <ul>
                    @if (Model.Products != null && Model.Products.Any())
                    {
                        foreach (var item in Model.Products)
                        {
                            <li>
                                <a href="/mobile/prodetail/@item.Id"  >
                                    <img class="goods_img" src="@item.ImgUrl">
                                    <span>@item.Name @item.Model1</span>
                                    @if (item.IsHot)
                                    {
                                        <img class="hot" src="/images/sale.png">
                                    }

                                </a>
                            </li>
                        }
                    }

                   
                </ul>
            </div>
        </div>
        <!-- 简介 -->
        <div class="introduce_bj">
            <div class="in_left">
                <div class="index_title">
                    <div class="title">公司简介</div>
                    <div class="main">
                        <span>COMPANY PROFILE</span>
                    </div>
                </div>
                <p>建研华测（杭州）科技有限公司是一家专业从事混凝土3D打印和高端测试仪器设备开发、生产和销售的国家高新技术企业。生产研发基地设在杭州萧山区和沈阳浑南高新技术开发区。公司的主要产品有：混凝土3D打印系统、高性能低场磁共振微观分析仪、全自动混凝土凝结时间测定仪、混凝土冻融试验机、混凝土碳化箱、非接触式混凝土收缩变形测定仪、钢筋混凝土电化学腐蚀测试仪、混凝土热物理参数测定仪、混凝土气体渗透测试仪、混凝土温度-应力试验机、工业内窥镜、硬化混凝土气孔结构分析仪等...</p>
                <div class="btn"><a href="/mobile/about" target="_blank"><img src="/images/to.png"></a></div>
            </div>
            <div class="in_right">
                <img class="leftop" src="/images/leftop.png">
                <img src="/images/about.png">
                <img class="rightdown" src="/images/rightdown.png">
            </div>
        </div>
        <!-- 精彩视频 -->
        <div class="vedio">
            <div class="index_title">
                <div class="title">精彩视频</div>
                <div class="main">
                    <span>VEDIO</span>
                </div>
            </div>
            <div class="vedio_container swiper-container">
                <div class="swiper-wrapper">
                    @if (Model.Vedios != null && Model.Vedios.Any())
                    {
                        foreach (var item in Model.Vedios)
                        {
                            <div class="swiper-slide">
                                <div class="slide_main">

                                    <a href="/mobile/VedioDetail/@item.Id">
                                        <img src="@item.ImgUrl">
                                    </a>
                                    <div class="mainP">@item.Title</div>
                                    <span>@item.CreatedDate</span>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
            <div class="vedio_more"><a href="/mobile/vedio">查看更多视频</a></div>
        </div>
        <!-- 学术交流 -->
        <div class="learning">
            <div class="index_title">
                <div class="title">学术交流</div>
                <div class="main">
                    <span>ACADEMIC EXCHANGE</span>
                    <div class="more">
                        <a href="list/learning.html" target="_blank">
                            <span>更多</span>
                            <img src="/images/to1.png">
                        </a>
                    </div>
                </div>
            </div>
            <ul class="learning-box">
                @if (Model.Articles != null && Model.Articles.Any())
                {
                    foreach (var item in Model.Articles)
                    {
                        <li>
                            <img src="@item.ImgUrl">
                            <div class="main">
                                <div class="title">  <a href="/mobile/newDetail/@item.Id"> @item.Title </a></div>
                                <div class="neirong">
                                </div>
                            </div>
                            <div class="mengceng"></div>
                        </li>
                    }
                }
            </ul>
        </div>
        <!-- 合作机构 -->
        <div class="cooperative">
            <div class="index_title">
                <div class="title">合作机构</div>
                <div class="main">
                    <span>COOPERATIVE ORGANIZATRON</span>
                    <div class="more">
                        <a href="javascript:;">
                            <span>更多</span>
                            <img src="/images/to1.png">
                        </a>
                    </div>
                </div>
            </div>
            <ul>
                @if (Model.Logos != null && Model.Logos.Any())
                {
                    foreach (var item in Model.Logos)
                    {
                        <li><img src="@item.ImgUrl" title="@item.Title"></li>
                    }
                }
            </ul>
        </div>

    </div>

</div>

@section Scripts{
    <script src="/js/mobile/swiper.min.js" type="text/javascript"></script>
    <script src="/js/mobile/index.js" type="text/javascript"></script>
}
