@model List<DanaZhangCms.Models.Article>
@{
    ViewData["Title"] = "新闻中心";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section css{  
    <link rel="stylesheet" type="text/css" href="/css/new/list/video.css" />
}
<div class="video_whole" style="padding-top: 80px;">
    <div class="common_containe">
        <div class="list_top">
            <i></i>
            <a href="/">首页 > </a>
            <a href="/vedio">精彩视频 </a>
        </div>
        <div class="goods_video">
            <ul id="pageMain">
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <li>
                            <img class="goods_img" src="@item.ImgUrl">
                            <div class="img_bj">
                                <a href="/Vedio/Detail/@item.Id"> <img class="play" src="/images/details/video_img.png">  </a>  
                            </div>
                            <div class="v_shipin"></div>
                            <div class="v_main" data-id="@item.Id">                        
                               
 
                            </div>
                        </li>
                    }
                }
            </ul>
        </div>
        <div id="pageBox">
            <span id="prev">上一页</span>
            <ul id="pageNav"></ul>
            <span id="next">下一页</span>
        </div>

    </div>
</div>
@section Scripts{

    <script>
        var total = '@(ViewBag.Total)';
        var pageUrl = "@(Url.Action("Index", "Article"))";
    </script>
    <script src="~/js/new/list/video.js"></script>
}