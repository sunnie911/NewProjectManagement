            @Html.LabelFor(model => model.VedioUrl, new { @class = "layui-form-label" })
            <div class="layui-input-inline">
                <div class="uploadPreview" id="PreviewVedio">
                    @if (!string.IsNullOrEmpty(Model.VedioUrl))
                    {
