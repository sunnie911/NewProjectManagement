@model DanaZhangCms.Models.Article
@{
    ViewData["Title"] = Model.Title;

    var preArticle = ViewBag.PreArticle as Article;

    var lastArticle = ViewBag.LastArticle as Article;
    Layout = "~/Views/Shared/_LayoutEn.cshtml";

    var type = ViewBag.CategoryId;
}

@section css{

    <link href="~/css/new/details/lea_details.css" rel="stylesheet" />
}
<div class="lea_whole" style=" margin-top:80px; ">
    <div class="common_containe">
        <div class="list_top">
            <i></i>
            <a href="/english">Index > </a>

            @if (type == 4)
            {
                <a href="/english/article"> Company News </a>
            }
            else if (type == 7)
            {
                <a href="/english/article?categoryId=7">Scient Standard </a>
            }

            else if (type == 8)
            {
                <a href="/english/article?categoryId=8">Project Cases </a>
            }
            @*<a href="/english/article">News </a>*@
            <a href="javascript:;"> @Model.TitleEn </a>
        </div>
        <div class="lea_main">
            <h2>@Model.TitleEn</h2>
            <span class="time">@Model.CreatedDate</span>
            <div class="leaBox">
                @Html.Raw(Model.ContentEn)

            </div>
        </div>
        <div class="lea_bott">
            @if (preArticle != null && preArticle.Id > 0)
            {
                <a href="/english/NewDetail/@preArticle.Id">
                    <div>
                        <img src="@preArticle.ImgUrl">
                    </div>
                    <div class="lea_right">
                        <span>  上一篇</span>
                        <p>@preArticle.TitleEn</p>
                    </div>
                </a>
            }
            @if (lastArticle != null && lastArticle.Id > 0)
            {

                <a href="/english/NewDetail/@lastArticle.Id">
                    <div>
                        <img src="@lastArticle.ImgUrl">
                    </div>
                    <div class="lea_right">
                        <span> 下一篇 > </span>
                        <p>@lastArticle.TitleEn</p>
                    </div>
                </a>
            }
        </div>
    </div>
</div>
@section Scripts{

    <script src="~/js/new/details/lea_details.js"></script>
}
