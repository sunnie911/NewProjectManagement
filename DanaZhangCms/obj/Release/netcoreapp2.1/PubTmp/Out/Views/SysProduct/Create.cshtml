                fileVal: 'upload',
                accept: {
                    title: 'Images',
                    mimeTypes: 'image/*'
                },

            });

            uploader4.on('uploadProgress', function (file, percentage) {
                $("#PreviewImg1").html("上传中...");
            });

            uploader4.on('uploadSuccess', function (file, response) {
