    <div class="layui-form-item">
        @Html.LabelFor(model => model.VedioUrl, new { @class = "layui-form-label" })
        <div class="layui-input-inline">
            <div class="uploadPreview" id="PreviewVedio">
                @if (!string.IsNullOrEmpty(Model.VedioUrl))
                {
                    <video width="100%" controls="" preload="auto" autoplay="autoplay">
                        <source src="@Model.VedioUrl" />
                    </video>
                }
                else
                {
                    @:暂无视频
                }
            </div>
            <div class="left">
                <div class="uploadProgressBar"></div>
                <div id="UploadVedio" class="uploadBut">选择视频</div>
            </div>
            <div class="clear"></div>
        </div>
        @Html.HiddenFor(x => x.VedioUrl)

    </div>
    <div class="layui-form-item">

        @Html.LabelFor(model => model.IsHot, new { @class = "layui-form-label" })
        <div class="layui-input-inline">
            @Html.CheckBoxFor(model => model.IsHot, new { @class = "layui-checkbox" })

        </div>

    </div>

    <div class="layui-form-item">

        @Html.LabelFor(model => model.SortId, new { @class = "layui-form-label" })
        <div class="layui-input-inline">
            @Html.TextBoxFor(model => model.SortId, new { @class = "layui-input", @required = "", @lay_verify = "required", autocomplete = "off" })

        </div>
        <div class="layui-form-mid layui-word-aux">
            <span class="x-red">*</span>

        </div>
    </div>
    <div class="layui-form-item">

        @Html.LabelFor(model => model.Paramter, new { @class = "layui-form-label" })
        <div class="layui-input-inline" style="width:900px;min-height:500px;">

            <script id="Paramter" name="Paramter" type="text/plain">
                    @Model.Paramter
            </script>
            <input type="hidden" name="Paramter1" id="Paramter1" value="@Model.Paramter" />
        </div>

    </div>
    <div class="layui-form-item">

        @Html.LabelFor(model => model.Files, new { @class = "layui-form-label" })
        <div class="layui-input-inline" style="width:900px;min-height:500px;">

            <script id="Files" name="Files" type="text/plain">
                    @Model.Files
            </script>
            <input type="hidden" name="Files1" id="Files1" value="@Model.Files" />
        </div>

    </div>
    <div class="layui-form-item">

        @Html.LabelFor(model => model.Content, new { @class = "layui-form-label" })
        <div class="layui-input-inline" style="width:900px;min-height:500px;">

            <script id="Content" name="Content" type="text/plain">
                    @Model.Content
            </script>
            <input type="hidden" name="Content1" id="Content1" value="@Model.Content" />
        </div>

    </div>
    <div class="layui-form-item">

        @Html.LabelFor(model => model.ParamterEn, new { @class = "layui-form-label" })
        <div class="layui-input-inline" style="width:900px;min-height:500px;">
            <script id="ParamterEn" name="ParamterEn" type="text/plain">
                    @Model.ParamterEn
            </script>
            <input type="hidden" name="ParamterEn1" id="ParamterEn1" value="@Model.ParamterEn" />
        </div>

    </div>

    <div class="layui-form-item">

        @Html.LabelFor(model => model.ContentEn, new { @class = "layui-form-label" })
        <div class="layui-input-inline" style="width:900px;min-height:500px;">

            <script id="ContentEn" name="ContentEn" type="text/plain">
                    @Model.ContentEn
            </script>
            <input type="hidden" name="ContentEn1" id="ContentEn1" value="@Model.ContentEn" />
        </div>

    </div>


    <div class="layui-form-item">
        <label for="L_repass" class="layui-form-label">
        </label>
        <button class="layui-btn" lay-filter="add" lay-submit="">
            保存
        </button>
    </div>
</form>
@section Scripts{

    <style>
        .ck-content {
            max-height: 400px;
            height: 400px;
        }
    </style>

    <link type="text/css" rel="stylesheet" href="/lib/webuploader/webuploader.css" />
    <script type="text/javascript" src="/lib/webuploader/webuploader.js"></script>  
    <script src="/lib/ueditor/ueditor.config.js"></script>
    <script src="/lib/ueditor/ueditor.all.min.js"></script>


    <script>

        var ue = UE.getEditor('Content', {
            initialFrameHeight:800
        });
        var oldhtml = $("#Content1").val();

        ue.ready(function () {
            ue.setContent(oldhtml);
