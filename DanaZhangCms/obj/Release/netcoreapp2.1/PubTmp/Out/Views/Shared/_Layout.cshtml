@{
    var workContext = ViewBag.WorkContext as DanaZhangCms.ViewModels.WebWorkContext;
    List<Product> productList = ViewBag.ProductList;
    List<ProductCategory> cateList = ViewBag.CategoryList;
}

<!DOCTYPE html>
<html>
<head>
    <title>@Html.Raw(ViewBag.SeoTitle)</title>
    <meta name="renderer" content="webkit">
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0,user-scalable=0,minimal-ui">
    <meta name="description" content="@Html.Raw(ViewBag.SeoDescription)" />
    <meta name="keywords" content="@Html.Raw(ViewBag.SeoKeyword)" />
    <meta name="generator" content="" data-variable="" />
