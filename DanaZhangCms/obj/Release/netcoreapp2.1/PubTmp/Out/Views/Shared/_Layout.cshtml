    <script src="/js/new/header.js"></script>
    @RenderSection("css", required: false)

</head>
<body>
    <div class="nav" ref="dataCon">
        <div class="common_containe" ref="pageContainer">
            <div class="logo">
                <a href="/home"> <img src="/images/logo1.png"></a>

            </div>
            <div class="list">
                <ul>
                    @if (cateList != null && cateList.Any())
                    {
                        foreach (var cate in cateList)
                        {
                            var proList = productList.Where(p => p.CategoryId == cate.Id).OrderByDescending(o => o.IsHot).ToList();
                            <li>
                                <a href="/Product?categoryId=@cate.Id">
                                    <span>@cate.Name</span>
                                </a>
                                <div class="list_box">
                                    <div class="navlist_current">
                                        <div class="common_containe nav_pageMain">
                                            @foreach (var pro in proList)
                                            {
                                                <span>
                                                    <a href="@(Url.Action("Detail","Product",new { id=pro.Id}))">
                                                        <div class="img_box">
                                                            <img src="@pro.ImgUrl" title="@pro.Name">
                                                            @if (pro.IsHot)
                                                            {
                                                                <img   class="hot" src="/images/sale.png" />
                                                            }
                                                        </div>
                                                        <p>@pro.Name</p>
                                                    </a>
                                                </span>
                                            } 
                                        </div>
                                        <div class="common_containe">
                                            <div class="nav_pageBox">
                                                <img class="nav_prev" src="/images/page_left.png">
                                                <img class="nav_next" src="/images/page_right.png">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </li>

                        }
                    }

                    <li>
                        <a href="/contact" target="_blank">
                            <span>联系我们</span>
                        </a>
                        <div class="lianxi">
                            <a href="/about" target="_blank"><span>公司简介  </span></a>
                            <span>公司优势</span>
                            <span>服务客户</span>
                            <span><a href="/article" target="_blank">学术交流</a></span>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="search">
                <p><img src="/images/sousuo.png"></p>
                <input type="text" />
                <div class="english">En</div>
            </div>
            <div class="text"></div>
        </div>
    </div>
