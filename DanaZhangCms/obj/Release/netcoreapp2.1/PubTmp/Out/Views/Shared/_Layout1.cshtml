@{
    var workContext = ViewBag.WorkContext as DanaZhangCms.ViewModels.WebWorkContext;
}

<!DOCTYPE html>
<html>
<head>
    <title>@Html.Raw(workContext.Sites.SeoTitle)</title>
    <meta name="renderer" content="webkit">
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0,user-scalable=0,minimal-ui">
    <meta name="description" content="@Html.Raw(workContext.Sites.SeoDescription)" />
    <meta name="keywords" content="@Html.Raw(workContext.Sites.SeoKeyword)" />
    <meta name="generator" content="" data-variable="" />
    <link href="/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <link rel="stylesheet" type="text/css" href="/css/basic.css">
    <link rel="stylesheet" type="text/css" href="/css/index.css" />
    @RenderSection("css", required: false)
    <style>
        body {
            background-image: url();
            background-position: center;
            background-repeat: no-repeat;
            background-color: #f2f2f2;
        }
    </style>
</head>
<body class="met-navfixed">
    <header class='head_nav_met_16_3 met-head navbar-fixed-top' m-id='33' m-type='head_nav'>
        <div id="header" class="    header-fixed">
            <div class="container">
                <ul class="head-list p-l-0">
                    <li class="left tel">
                        <img src="" alt="">
                        <span>全国咨询热线：</span>
                        <em>@Html.Raw(workContext.Sites.webtel)</em>
                    </li>

                </ul>
            </div>
        </div>
        <nav class="navbar navbar-default box-shadow-none head_nav_met_16_3">
            <div class="container">
                <div class="row">
                    <h1 hidden>@(workContext.Sites.webname)</h1>
                    <!-- logo -->
                    <div class="navbar-header pull-xs-left">
                        <a href="/" class="met-logo vertical-align block pull-xs-left p-y-5" title="@(workContext.Sites.webname)">
                            <div class="vertical-align-middle">
                                <img src="@(workContext.Sites.logo)" alt="@(workContext.Sites.webname)">
                            </div>
                        </a>
                    </div>
                    <!-- logo -->
                    <button type="button" class="navbar-toggler hamburger hamburger-close collapsed p-x-5 head_nav_met_16_3-toggler" data-target="#head_nav_met_16_3-collapse" data-toggle="collapse">
                        <span class="sr-only"></span>
                        <span class="hamburger-bar"></span>
                    </button>
                    <!-- 会员注册登录 -->
                    <!-- 会员注册登录 -->
                    <!-- 导航 -->
                    <div class="collapse navbar-collapse navbar-collapse-toolbar pull-md-right p-0" id="head_nav_met_16_3-collapse">
                        <ul class="nav navbar-nav navlist">
                            <li class='nav-item'>
                                <a href="/" title="网站首页" class="nav-link active">网站首页</a>
                            </li>

                            <li class="nav-item dropdown m-l-0">
                                <a href="@(Url.Action("Index","Product"))" title="产品中心" class="nav-link">
                                    产品中心
                                </a>
                               
                            </li>

                            <li class="nav-item dropdown m-l-0">
                                <a href="@(Url.Action("Index","Article"))" title="新闻资讯" class="nav-link">
                                    新闻资讯
                                </a>
                               
                            </li>
                         @foreach(var item in workContext.Content)
                         {
                            <li class="nav-item dropdown m-l-0">
                                <a href="@Url.Action("Index","Content",new { spellname=item.SpellName})" title="@item.Title" class="nav-link ">
                                    @item.Title
                                </a>

                            </li>
                         }
                            
                            
                        </ul>
                    </div>
                    <!-- 导航 -->
                </div>
            </div>
        </nav>
    </header>
    <div class="banner_met_16_1 page-bg" data-height='' style='' m-id='34' m-type='banner'>
        @if (workContext.Banners != null)
        {
            // var imgs = string.Join(',', workContext.Banners.Select(o => o.ImgUrl).ToArray());
            @foreach (var item in workContext.Banners)
            {
                <div class="slick-slide">
                    <img class="cover-image" src="@item.ImgUrl" srcset='@item.ImgUrl' sizes="(max-width: 767px) 767px" alt="" data-height='0|0|0'>
                </div>
            }
            @*<div class="slick-slide">
                    <img class="cover-image" src="@workContext.Banners.First().ImgUrl" srcset='@imgs' sizes="(max-width: 767px) 767px" alt="" data-height='0|0|0'>
                </div>*@
        }

    </div>

    @RenderBody()



    <footer class='foot_info_met_16_1 met-foot p-y-20 border-top1' m-id='6' m-type='foot'>
        <div class="container text-xs-center">
            <p>@(workContext.Sites.webcrod)</p>

            <ul class="met-langlist p-0"></ul>
        </div>
    </footer>
    <input type="hidden" name="met_lazyloadbg" value="/images/metinfo6343.gif">
    <script src="/js/basic.js"></script>
    @RenderSection("Scripts", required: false)

</body>

</html>
