@model List<DanaZhangCms.Models.Article>
@{
    ViewData["Title"] = "新闻中心";
    Layout = "~/Views/Shared/_LayoutMobile.cshtml";
}
@section css{
    <link rel="stylesheet" type="text/css" href="/css/mobile/list/video.css" />
}

 
<div class="video_whole"  >
    <div class="common_containe">
        <div class="list_top">
            <i></i>
            <a href="/">首页 > </a>
            <a href="/vedio">精彩视频 </a>
        </div>
        <div class="goods_video">
            <ul>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <li>
                            <img class="goods_img" src="@item.ImgUrl">
                            <div class="img_bj">
                                <a href="/Vedio/Detail/@item.Id"> <img class="play" src="/images/details/video_img.png"></a>
                            </div>
                            <div class="v_shipin"></div>
                            <div class="v_main" data-id="@item.Id">


                            </div>
                            <p class="jieshao">@item.Title</p>
                        </li>
                    }
                }
            </ul>
        </div>
     

    </div>
</div>
@section Scripts{
    <script src="~/js/mobile/list/video.js"></script>
}