@model DanaZhangCms.Models.Product
@{

    Layout = "~/Views/Shared/_LayoutMobile.cshtml";

    List<string> imglist = new List<string>();

    if (!string.IsNullOrWhiteSpace(Model.ImgUrl))
    {
        imglist.Add(Model.ImgUrl);
    }

    if (!string.IsNullOrWhiteSpace(Model.Banner1))
    {
        imglist.Add(Model.Banner1);
    }

    if (!string.IsNullOrWhiteSpace(Model.Banner2))
    {
        imglist.Add(Model.Banner2);
    }

    if (!string.IsNullOrWhiteSpace(Model.Banner3))
    {
        imglist.Add(Model.Banner3);
    }

    if (!string.IsNullOrWhiteSpace(Model.Banner4))
    {
        imglist.Add(Model.Banner4);
    }

}

@section css{
    <link href="~/css/mobile/details/product_details.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="/css/mobile/swiper.min.css" />
    <style type="text/css">
        .det_banner .swiper-button-next {
            background-image: url("/images/details/jian_right.png");
            background-size: 100%;
        }

        .det_banner .swiper-button-prev {
            background-image: url("/images/details/jian_left.png");
            background-size: 100%;
        }

        .par_main img {
            display: inline-table;
        }
    </style>
}
<div class="list_details">
    <!-- 导航 -->
    <div class="details_nav">
        @*<div class="common_containe">*@
            <div class="left">@Model.Name</div>
            @*<div class="right" id="loutinav">
                <ul>
                    <li>产品大图</li>
                    <li>产品视频</li>
                    <li>技术参数</li>
                    <li>细节亮点</li>
                </ul>
            </div>*@
       
    </div>
    <div class="louti_box">
        <!-- banner -->
        <div class="det_banner louti">
            <div class="common_containe">
                <div class="swiper-container">
                    <div class="swiper-wrapper">
                        @foreach (var img in imglist)
                        {
                            <div class="swiper-slide">
                                <img src="@img">
                            </div>
                        }

                       
                    </div>

                </div>
                <div class="swiper-button-next"></div>
                <div class="swiper-button-prev"></div>
            </div>
        </div>
        <!-- 产品视频 -->
        <div class="goods_video louti">
            <div class="common_containe">
                <div class="det_title">
                    <div>产品视频</div>
                    <span>Product video</span>
                </div>
                <ul>
                    <li>
                        <img class="goods_img" src="/images/details/tu.png">
                        <img class="play" src="/images/details/video_img.png">
                        <p>混凝土砂浆桌面3D打印机NELD-3D736</p>
                        <div class="v_shipin"></div>
                        <div class="v_main">
                            <video width="800" height="400" controls>
                                <source src="/images/details/movie.mp4" type="video/mp4">
                                </source>

                            </video>
                        </div>
                    </li>
                    <li>
                        <img class="goods_img" src="/images/details/tu.png">
                        <img class="play" src="/images/details/video_img.png">
                        <p>混凝土砂浆桌面3D打印机NELD-3D736</p>
                        <div class="v_shipin"></div>
                        <div class="v_main">
                            <video width="800" height="400" controls>
                                <source src="/images/details/movie2.mp4" type="video/mp4">
                                </source>

                            </video>
                        </div>
                    </li>
                </ul>
            </div>
        </div>

        <!-- 技术参数 -->
        <div class="parameter louti">
            <div class="common_containe">
                <div class="det_title">
                    <div>技术参数</div>
                    <span>Technical data</span>
                </div>
                <div class="par_main">
                    @Html.Raw(Model.Paramter)
                </div>
            </div>
        </div>
        <!-- 细节亮点 -->
        <div class="Highlights louti">
            <div class="common_containe">
                <div class="det_title">
                    <div>细节亮点</div>
                    <span>Details highlights</span>
                </div>

                <div class="par_main">
                    @Html.Raw(Model.Content)
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="/js/mobile/swiper.min.js" type="text/javascript"></script>
    <script src="~/js/mobile/details/product_details.js"></script>
}